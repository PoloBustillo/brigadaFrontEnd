{
  "expo": {
    "name": "Brigada",
    "slug": "brigada2026",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "brigadafrontend",
    "userInterfaceStyle": "automatic",
    "backgroundColor": "#FF1B8D",
    "newArchEnabled": true,
    "ios": {
      "bundleIdentifier": "com.brigadadigital.app",
      "supportsTablet": true
    },
    "android": {
      "package": "com.brigadadigital.app",
      "minSdkVersion": 26,
      "permissions": [
        "CAMERA",
        "READ_MEDIA_IMAGES",
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "VIBRATE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ],
      "adaptiveIcon": {
        "backgroundColor": "#FF1B8D",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "cameraPermission": "Permite tomar fotos para las encuestas de campo.",
          "microphonePermission": false,
          "photosPermission": "Permite adjuntar imágenes desde tu galería."
        }
      ],
      [
        "@sentry/react-native/expo",
        {
          "url": "https://sentry.io/",
          "organization": "brigada-app",
          "project": "brigada-app",
          "uploadSourceMaps": true
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#FF1B8D",
          "dark": {
            "backgroundColor": "#FF1B8D"
          }
        }
      ],
      "expo-sqlite",
      "react-native-document-scanner-plugin",
      "@react-native-community/datetimepicker",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Permite registrar tu ubicación en las encuestas de campo."
        }
      ],
      "@sentry/react-native"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "890c536e-b2c7-458b-b2fe-82e76ae87bff"
      }
    },
    "owner": "polobustillo88"
  }
}
